
.com-live-home
  //height var(--app-height)
  //width var(--app-width)
  height 100%
  width 100%
  font-size .3rem
  position relative;
  overflow auto
  -webkit-overflow-scrolling: touch;
  .scroll-area
    height 100%
    width 100%
    overflow hidden

    position relative;
    background url('/static/images/åº•.jpg')
    background-size 100% auto
    background-repeat:no-repeat;
    background-position center

  //background-origin content-box

  .middle-wrap
    width 0
    height 0
    position absolute
    top 50%
    left 50%

    .light
      position absolute
      top: -3.8rem;
      left: -4.8rem;
      animation lightmove 5s linear infinite; //alternate;
      opacity 0
      @keyframes lightmove
        0%
          opacity 0
        10%
          opacity .4
          //transform scale(0.5)
        30%
          opacity 1
          //transform scale(1)  //translate(-.4rem,.4rem)
        40%
          opacity 0
          //transform scale(0.7)
        100%
          opacity 0
          //transform scale(0.5)


      img
        width 7.2rem
        height auto
    .liuxing
      position absolute
      //transition  transform  8s
      top: -12rem;
      left: -8rem;
      animation liuxingmove 10s infinite ;
      img
        width 7rem
        height auto
      @keyframes liuxingmove
        from
          transform translate(0, 0)

        to
          transform translate(13rem, 13rem)

    .mybtn
      position absolute
      text-align center
      img
        width 1rem
      .mytitle
        letter-spacing .4rem
        font-size .2rem
        color white
        white-space nowrap
        span
          letter-spacing 0

    .btn_500
      left -2.5rem
      top -3rem
    .btn_block
      left -.9rem
      top -1.2rem
    .produce
      left -.3rem
      top 1rem
    .contact
      left -.2rem
      top 3.4rem
      .mytitle
        letter-spacing .1rem
    .block-posion
      left -.2rem
      top -2.5rem
    .six
      left 1rem
      top -1.3rem
    .garden
      left 1.4rem
      top .3rem
    .overloap-btn
      left: .5rem;
      top: -.5rem
    .tall-build
      left: 1.4rem;
      top: .6rem
    .fashion
      left: 1rem;
      top: 2rem;



  .after-btn
    z-index 900

  .my-model
    position absolute
    left 0
    top 0
    right 0
    bottom 0
    background rgba(0,0,0,.3)
